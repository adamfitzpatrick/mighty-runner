{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": false,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@assets/*": [ "./src/assets/*" ],
            "@components/*": [ "./src/components/*" ],
            "@containers/*": [ "./src/containers/*" ],
            "@containers": [ "./src/containers" ],
            "@routes/*": [ "./src/routes/*" ],
            "@services/*": [ "./src/services/*" ],
            "@state/*": [ "./src/state/*" ],
            "@models": [ "./models" ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "es6",
            "ES2018.Promise"
        ],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strictNullChecks": true
    }
}
