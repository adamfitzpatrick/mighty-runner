{
  "name": "mighty-runner",
  "version": "0.1.0",
  "description": "Webapp for Shadowrun 5e character creation",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && webpack -p",
    "generate": "node ./utils/generator.js",
    "lint": "tslint src/**/*.{ts,tsx} --project tsconfig.json",
    "postinstall": "cp ./pre-commit .git/hooks",
    "start": "webpack-dev-server --env local --config config/webpack.config.js",
    "tdd": "jest --watch --coverage",
    "test": "jest --coverage"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-redux": "7.1.2",
    "@types/react-router": "5.0.3",
    "@types/react-router-dom": "5.1.2",
    "@types/react-test-renderer": "16.9.0",
    "@types/redux-logger": "3.0.7",
    "@types/shortid": "0.0.29",
    "@types/url-parse": "1.4.3",
    "@types/uuid": "3.4.5",
    "acorn": "7.0.0",
    "awesome-typescript-loader": "5.2.1",
    "classnames": "2.2.6",
    "css-loader": "1.0.0",
    "file-loader": "2.0.0",
    "handlebars": "^4.5.3",
    "handlebars-loader": "1.7.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.5.0",
    "jest-fetch-mock": "2.1.1",
    "jest-haste-map": "24.0.0",
    "jest-resolve": "24.1.0",
    "memory-fs": "0.4.1",
    "node-sass": "4.13.1",
    "nodemon": "1.18.10",
    "prerender-loader": "1.3.0",
    "raw-loader": "0.5.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-redux": "7.1.1",
    "react-router": "5.0.1",
    "react-router-dom": "5.1.2",
    "react-test-renderer": "16.9.0",
    "redux": "4.0.4",
    "redux-logger": "3.0.6",
    "resource-hints-webpack-plugin": "0.0.2",
    "sass-loader": "7.1.0",
    "shortid": "2.2.15",
    "simplex-noise": "2.4.0",
    "snazzy": "8.0.0",
    "standard": "12.0.1",
    "style-loader": "0.23.0",
    "three": "0.102.1",
    "ts-jest": "24.0.2",
    "tslint": "5.15.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.1.6",
    "typings-for-css-modules-loader": "1.7.0",
    "url-loader": "1.1.1",
    "url-parse": "1.4.4",
    "uuid": "3.3.3",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "3.5.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.2.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "standard-preact"
    ],
    "ignore": [],
    "globals": []
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@types/rewire": "^2.5.28",
    "chai": "^4.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "globals": {
      "API_HOST": "testing-url"
    },
    "rootDir": ".",
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/style-mock.ts",
      "@(assets|components|containers|services|state)/(.*)": "<rootDir>/src/$1/$2",
      "@models": "<rootDir>/models/"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    }
  }
}
